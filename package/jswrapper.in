#!/bin/bash

JAVA=java
ESXX_PATH="@SHARE_INSTALL_PREFIX@/@PROJECT_NAME@:@SHARE_INSTALL_PREFIX@/@PROJECT_NAME@/site"

if [ -f /etc/sysconfig/@PROJECT_NAME@ ]; then
    . /etc/sysconfig/@PROJECT_NAME@
fi

if [ -f /etc/default/@PROJECT_NAME@ ]; then
    . /etc/default/@PROJECT_NAME@
fi

if [ ! -z "${JAVA_HOME}" ]; then
    JAVA=${JAVA_HOME}/bin/java
fi

${JAVA} -Desxx.app.include_path="${ESXX_PATH}" \
    -jar @SBIN_INSTALL_DIR@/@PROJECT_NAME@.jar --script -- "$@"
