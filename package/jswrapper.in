#!/bin/bash

JAVA=java
JVMARGS=
ESXX_PATH=
ARGS=($@)


if [ ! -z "${JAVA_HOME}" ]; then
    JAVA=${JAVA_HOME}/bin/java
fi

if [ -f /etc/sysconfig/@PROJECT_NAME@ ]; then
    . /etc/sysconfig/@PROJECT_NAME@
fi

if [ -f /etc/default/@PROJECT_NAME@ ]; then
    . /etc/default/@PROJECT_NAME@
fi


${JAVA} ${JVMARGS} -Desxx.app.include_path="${ESXX_PATH}" \
    -jar @SBIN_INSTALL_DIR@/@PROJECT_NAME@.jar --script -- "${ARGS[@]}"
