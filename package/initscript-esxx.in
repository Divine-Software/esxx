
PATH=/sbin:/bin:/usr/sbin:/usr/bin

if [ -z "${ESXX_INSTANCE}" ]; then 
  echo "ESXX_INSTANCE must be set"
  exit 10
fi

if [ -z "${ESXX_OPTIONS}" ]; then 
  echo "ESXX_OPTIONS must be set"
  exit 10
fi

prog=@PROJECT_NAME@
absprog=@SBIN_INSTALL_DIR@/$prog
desc="@CPACK_PACKAGE_DESCRIPTION_SUMMARY@"
pidfile=@LOCALSTATE_INSTALL_PREFIX@/run/$prog-${ESXX_INSTANCE}.pid
conffile=@SYSCONF_INSTALL_DIR@/@CONFDIR@/@PROJECT_NAME@-${ESXX_INSTANCE}
timeout=10

if [ -f /etc/init.d/functions ]; then
  # RedHat-style startup
  lockfile=@LOCALSTATE_INSTALL_PREFIX@/lock/subsys/$prog-${ESXX_INSTANCE}
  grep --quiet -- --pidfile /etc/init.d/functions && long_pidfile="--pidfile $pidfile"
  grep --quiet -- --pidfile /etc/init.d/functions && short_pidfile="-p $pidfile"
  ESXX_OPTIONS="$ESXX_OPTIONS --user apache"

  if [ -f $conffile ]; then
    . $conffile
  fi

  . /etc/init.d/functions

  start() {
    echo -n $"Starting $prog: "
    if [ $UID -ne 0 ]; then
      RETVAL=1
      failure
    else
      daemon $long_pidfile $absprog --pidfile $pidfile $ESXX_OPTIONS
      RETVAL=$?
      [ $RETVAL -eq 0 ] && touch $lockfile
    fi
    echo
    return $RETVAL
  }

  stop() {
    echo -n $"Shutting down $prog: "
    if [ $UID -ne 0 ]; then
      RETVAL=1
      failure
    else
      killproc $short_pidfile -d $timeout $prog
      RETVAL=$?
      [ $RETVAL -eq 0 ] && rm -f $lockfile
    fi
    echo
    return $RETVAL
  }
else
  # Debian-style startup
  lockfile=@LOCALSTATE_INSTALL_PREFIX@/lock/$prog-${ESXX_INSTANCE}
  ESXX_OPTIONS="$ESXX_OPTIONS --user www-data"

  if [ -f $conffile ]; then
    . $conffile
  fi

  start() {
    echo -n "Starting $desc: $prog"
    if [ $UID -ne 0 ]; then
      RETVAL=1
      echo -n " failed"
    else
      sh -c "start-stop-daemon --start --quiet --exec $absprog \
    	       --pidfile $pidfile -- --pidfile $pidfile $ESXX_OPTIONS"
      RETVAL=$?
      if [ $RETVAL -eq 0 ]; then
        touch $lockfile
      else
        echo -n " already running"
      fi
    fi
    echo "."
    return $RETVAL
  }

  stop() {
    echo -n "Stopping $desc: $prog"
    if [ $UID -ne 0 ]; then
      RETVAL=1
      echo -n " failed"
    else
      start-stop-daemon --stop --quiet --name java \
	                --pidfile $pidfile --retry $timeout
      RETVAL=$?
      if [ $RETVAL -eq 0 ]; then
        rm -f $lockfile
      else
        echo -n " not running"
      fi
    fi
    echo "."
    return $RETVAL
  }

  status() {
    return 4
  }
fi


case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  status)
    status $short_pidfile $prog
    ;;
  restart|force-reload)
    stop
    start
    ;;
  reload)
    exit 3
    ;;
  *)
    echo $"Usage: $0 {start|stop|status|restart|try-restart|force-reload}"
    exit 2
esac
